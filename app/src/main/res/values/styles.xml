<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue_ripple</item>
    </style>

    <!-- label and input for login fragment -->
    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_gravity">fill_horizontal|center</item>
    </style>

    <!-- list items -->

    <style name="clickable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="list_item_wrapper">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="list_item_title">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
    </style>

    <style name="list_item_description">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="facebook_button">
        <item name="android:background">@drawable/rounded_button_facebook_blue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="g_plus_button">
        <item name="android:background">@drawable/rounded_button_g_plus_red</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="blue_button">
        <item name="android:background">@drawable/rounded_button_blue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="yellow_button">
        <item name="android:background">@drawable/rounded_button_yellow</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">20dp</item>
    </style>
    
</resources>
